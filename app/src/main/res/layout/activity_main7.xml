                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Fourth Clinic Entry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Clinic Logo -->
                <ImageView
                    android:id="@+id/clinic_logo_4"
