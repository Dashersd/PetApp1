<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E9"
    tools:context=".MainActivity7">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back"
        tools:ignore="ContentDescription" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Vet Clinic"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="337dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="Search"
        android:inputType="text"
        android:paddingStart="60dp"
        android:textColor="@color/black"
        android:textColorHint="#6A6868"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

    <!-- Search Icon -->
    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="34dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="@+id/editTextText"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/editTextText"
        app:layout_constraintTop_toTopOf="@+id/editTextText"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/ic__glass"
        tools:ignore="ContentDescription" />

    <!-- ScrollView for the Clinic Entries -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Clinic Entry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Clinic Logo -->
                <ImageView
                    android:id="@+id/clinic_logo_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_clinic_logo"
                    android:contentDescription="Clinic Logo"
                    tools:ignore="HardcodedText" />

                <!-- Clinic Information -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    tools:ignore="RtlSymmetry">

                    <!-- Clinic Name -->
                    <TextView
                        android:id="@+id/clinic_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Happy Paws Veterinary Clinic"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <!-- Clinic Hours -->
                    <TextView
                        android:id="@+id/clinic_hours_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday to Friday: 8:00 AM - 6:00 PM"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <!-- Clinic Address -->
                    <TextView
                        android:id="@+id/clinic_address_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Pet Lane, FurBury, CA 90210"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <!-- View Profile Button -->
                        <Button
                            android:id="@+id/view_profile_button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Profile"
                            android:background="@drawable/button_view_profile"
                            android:textColor="@android:color/black"
                            android:padding="8dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ButtonStyle,HardcodedText" />

                        <!-- Book Appointment Button -->
                        <Button
                            android:id="@+id/book_appointment_button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Appointment"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:textColor="@android:color/white"
                            android:padding="8dp"
                            tools:ignore="ButtonStyle,HardcodedText" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Repeat the same structure for additional clinics -->
            <!-- Second Clinic Entry -->
