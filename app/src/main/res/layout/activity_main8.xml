<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5e8d9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back button"
            tools:ignore="HardcodedText" />

        <!-- Clinic Logo and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_card"
            android:padding="16dp">

            <ImageView
                android:id="@+id/clinic_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clinic_logo"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/clinic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy Paws Veterinary Clinic"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/status_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:layout_marginTop="8sp"
                android:background="@drawable/green_circle"
                android:textColor="#ffffff"
                android:padding="4dp"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- About Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            tools:ignore="HardcodedText" />

        <!-- Operating Hours Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:text="Operating Hours"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="• Monday to Friday: 8:00 AM - 6:00 PM\n• Saturday: 9:00 AM - 4:00 PM\n• Sunday: Closed"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText" />

        <!-- Contact Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="• Phone: (123) 456-7890\n• Email: info@happypawsvet.com\n• Website: www.happypawsvet.com"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Address"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:text="123 Pet Lane, Furbury, CA 90210"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Service Offered"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:text="• Vaccination \n • Routine Check-ups \n • Pet Boarding \n • Laboratory Services \n • Grooming"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:text="Book Appointment"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@drawable/round_background"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>
